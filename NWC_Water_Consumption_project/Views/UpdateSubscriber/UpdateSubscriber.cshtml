@model NWC_Water_Consumption_project.Models.TblNwcSubscriberFile
@using (Html.BeginForm("Save", "UpdateSubscriber", FormMethod.Post, new { @class = "form-horizontal", @dir = "rtl" }))
{
    <body>
        <div class="container">
            <main>
                <section class="main">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong></strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Failed Message"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong></strong> @TempData["Failed Message"]
                            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form action="" method="">
                        <h3>تحديث بيانات مشترك </h3>
                        <div class="form-layout">
                            <div class="right">

                                <div class="form-input">
                                    <label>رقم الهوية</label>
                                    <input type="text" name="Code" id="Code" placeholder="قم بإدخل رقم الهوية" />
                                </div>

                                <div class="form-input">
                                    <label>الإسم</label>
                                    <input type="text" name="Name" id="Name" />
                                </div>

                                <div class="form-input">
                                    <label>المدينة</label>
                                    <input type="text" name="City" id="City" />
                                </div>

                                <div class="form-input">
                                    <label>الحي</label>
                                    <input type="text" name="Area" id="Area" />
                                </div>

                                <div class="form-input">
                                    <label>رقم الجوال</label>
                                    <input type="text" name="PhoneNumber" id="PhoneNumber" />
                                </div>
                            </div>
                        </div>

                        <div class="form-control">
                            <button style="background-color: blue">حفظ</button>

                            <button style="background-color: red">إنهاء</button>

                        </div>
                    </form>
                </section>
            </main>
        </div>
    </body>
}



<style>
    form {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 100%;
        padding: 30px 70px;
        border: 2px solid black;
    }

        form h3 {
            font-size: 25px;
            align-self: end;
            margin-bottom: 30px;
        }

    .form-layout {
        display: flex;
        justify-content: space-between;
        gap: 60px;
    }

    .form-input {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 22px;
        gap: 20px;
        margin: 20px 0;
    }

        .form-input label {
            width: 150px;
        }

        .form-input input {
            min-width: 400px;
            padding: 5px;
            border: 0.5px solid black;
            font-size: 20px;
        }

    .form-control {
        display: flex;
        margin-top: 30px;
        flex-direction: row;
        gap: 20px;
        align-items: center;
        margin-right: 170px;

    }

        .form-control button {
            padding: 15px 60px;
            border: 1px solid black;
            color: white;
            font-size: 20px;
            cursor: pointer;
            background-color: #4646FF;
        }

    .alert {
        position: relative;
        padding: 0.75rem 1.25rem;
        margin-bottom: 1rem;
        border: 1px solid transparent;
        border-radius: 0.25rem;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .alert button.close {
        position: absolute;
        top: 0;
        right: 0;
        padding: 0.75rem 1.25rem;
        color: inherit;
    }

    .alert-success, .alert-danger {
        font-size: 23px;
    }

    .alert {
        font-size: 23px;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>

    $(document).ready(function () {
        $("#Code").change(function () {
            var newValue = $(this).val();
            myFunction(newValue);
        });
    });
    function myFunction(newValue) {
        $.post("/UpdateSubscriber/GetData",
            { subscriberId: newValue })
            .done(function (response) {
                $('#Name').val(response.d1);
                $('#City').val(response.d2);
                $('#Area').val(response.d3);
                $('#PhoneNumber').val(response.d4);

            })
            .fail(function (xhr, status, error) {
                console.error(xhr.responseText);
                console.error(xhr.status);

            });
    }


    function clear() {
        $('#Code').val("");
        $('#Name').val("");
        $('#City').val("");
        $('#Area').val("");
        $('#Phone').val("");
    }
</script>