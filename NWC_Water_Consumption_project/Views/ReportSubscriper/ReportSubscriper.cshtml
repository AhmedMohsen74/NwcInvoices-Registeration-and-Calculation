@model List<NWC_Water_Consumption_project.Models.TblNwcSubscriberFile>
<div class="table-container">
    <table>
        <thead>
            <tr class="rtl">
                <th>م</th>
                <th>رقم الهوية</th>
                <th>الأسم</th>
                <th>المدينة</th>
                <th>الحي</th>
                <th>رقم الجوال</th>
                <th>عدد الأشتراكات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscriber in Model)
            {
                <tr class="rtl">
                    <td>@subscriber.Counter</td>
                    <td>@subscriber.NwcSubscriberFileId</td>
                    <td>@subscriber.NwcSubscriberFileName</td>
                    <td>@subscriber.NwcSubscriberFileCity</td>
                    <td>@subscriber.NwcSubscriberFileArea</td>
                    <td>@subscriber.NwcSubscriberFileMobile</td>
                    <td>@subscriber.NumbOfsubsc</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 16.3px;
    }

    th {
        background-color: #4646FF;
        color: white;
    }

    .rtl {
        direction: ltr;
        font-family: 'Arabic';
    }

    .table-container {
        max-height: 650px; /* Set a maximum height for the container */
        overflow-y: auto; /* Add a vertical scrollbar */
    }
</style>



